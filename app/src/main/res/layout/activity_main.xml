<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back"

    tools:context=".MainActivity">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/button1"
            android:onClick="alpha"
            android:background="@drawable/alphabets"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/button2"
            android:onClick="GoToMonth"
            android:background="@drawable/monthes"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/days"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="GoToDays"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:onClick="GoToNumbers"
            android:background="@drawable/numbers"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/mm"
        android:layout_marginBottom="48dp"
        android:background="@drawable/music"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>



